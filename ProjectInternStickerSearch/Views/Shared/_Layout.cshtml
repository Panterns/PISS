<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>PISS- @ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link href="~/Content/bootstrap.css" rel="stylesheet" media="screen" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Project Intern Sticker Search", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <div class="navbar">
                      <div class="navbar-inner">
                       <ul class="nav">
                        @if(FormsAuthentication.FormsCookieName != null){
                            <li>@Html.ActionLink("Profile", "Profile", "Home")</li>
                            <li>@Html.ActionLink("Groups", "Group", "Home")</li>
                            <li>@Html.ActionLink("Logout", "Logout", "Home")</li>
                        } else{
                            <li>@Html.ActionLink("Login", "Index", "Home")</li>
                            <li>@Html.ActionLink("Register", "Register", "Home")</li>
                        }
                       </ul> 
                      </div>
                     </div>

                   @* <nav>
                        <ul id="menu">
                            @if(true){
                                 <li>@Html.ActionLink("Home", "Profile", "Home")</li>
                                 <li>@Html.ActionLink("Groups", "Groups", "Home")</li>
                            }else{
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            }
                        </ul>
                    </nav>*@
                </div>
            </div>
        </header>
        <div id="body">
            <div id="bodyWrapper">
                @RenderSection("featured", required: false)
                <section class="content-wrapper main-content clear-fix">
                   
                        @RenderBody()
                
                </section>
            </div>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Intern Application</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
